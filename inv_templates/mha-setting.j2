common_stage:
  args:
    type: list
  default:
    - proxy
    - repo
    - rpm
    - grub
    - ifcfg
    - sysctl
    - limits
    - snmpd
    - ssh
    - postfix
    - rsyslog

mysql_stage:
  args:
    type: list
  default:
    - rpm
    - conf
    - limits
    - initdb
    - databases
    - users_app
    - users_base
    - users_dba
    - users_mha
    - replication

mha_stage:
  args:
    type: list
  default:
    - rpm
    - ssh
    - conf

mysql_root:
  default:
    password: {{ password }}

mysql_app_user:
  default:
    app:
      - name: root
        host: '10.%'
        password: '{{ password }}'
        priv: '*.*:ALL,GRANT'
        state: present

mysql_database:
  args:
    type: list
  dafault:
    - name: {{ database }}
      collation: utf8mb4_general_ci
      encoding: utf8mb4

mha_group:
  default:
    mha:
{{ mha_group }}

mysql_replication:
  hostname:
{{ mysql_replication }}

mha_vip:
  default:
    db_vip: {{ db_vip }}
