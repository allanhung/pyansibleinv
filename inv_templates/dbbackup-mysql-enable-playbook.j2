---
- name: crontab
  hosts: all
  gather_facts: False
{{ task_id }}  tasks:
    - name: set crontab
      mycron:
        name: "MySQL Backup Scheduler"
        minute: {{ minute }}
        hour: {{ hour }}
        day: {{ day }}
        month: {{ month }}
        weekday: {{ day_of_week }}
        job:  "/dbbackup/pyxbackup cron"
        state: present

    - name: query crontab
      mycron:
        name: "MySQL Backup Scheduler"
        state: query
      register: crontab

    - name: Record crontab result
      ara_record:
        key: "mybak_{{ inventory_hostname }}"
        value: "{{ crontab }}"
