common_stage:
  args:
    type: list
  default:
    - proxy
    - repo
    - rpm
    - grub
    - ifcfg
    - sysctl
    - limits
    - snmpd
    - ssh
    - postfix
    - rsyslog

lvs_stage:
  args:
    type: list
  hostname:
{%- for mhost in mon_hostlist %}
    {{ mhost }}:
      - rpm
      - server
      - pxc_conf
{%- endfor %}
{%- for dhost in data_hostlist %}
    {{ dhost }}:
      - client
      - pxc_vip
{%- endfor %}

mysql_stage:
  args:
    type: list
  default:
    - pxc_common
    - pxc_rpm
    - conf
    - backup
    - limits
    - initdb
    - databases
    - users_app
    - users_base
    - users_dba
    - users_pxc
    - users_vtr
    - import
    - pxc_bootstrap
    - pxc_mysqlcheck

pacemaker_stage:
  args:
    type: list
  hostname:
{%- for mhost in mon_hostlist %}
    {{ mhost }}:
      - rpm
      - users
      - conf
{%- endfor %}

parted_stage:
  args:
    type: list
  default:
    - parted
    - rpm
    - mount

mysql_root:
  default:
    password: '{{ password }}'

mysql_backup:
  hostname:
{%- for mhost in mon_hostlist %}
    {{ mhost }}:
        backup_root_dir: /dbbackup
        backup_data_dir: /dbbackup/{{ service_name }}/{{ mhost }}/{{ mhost }}
        retention_sets: 3
        incr_retention_sets: 2
        enable: False
{%- endfor %}
{%- for dhost in data_hostlist %}
    {{ dhost }}:
        backup_root_dir: /dbbackup
        backup_data_dir: /dbbackup/{{ service_name }}/{{ dhost }}/{{ dhost }}
        retention_sets: 3
        incr_retention_sets: 2
        enable: {{ enable_backup }}
{%- endfor %}

mysql_app_user:
  default:
    app:
      - name: root
        host: '10.%'
        password: '{{ password }}'
        priv: '*.*:ALL,GRANT'
        state: present
      - name: root
        host: '172.%'
        password: '{{ password }}'
        priv: '*.*:ALL,GRANT'
        state: present

mysql_database:
  args:
    type: list
  default:
    - name: {{ database }}
      collation: utf8mb4_general_ci
      encoding: utf8mb4

mysql_plugin:
  args:
    type: list
  default:
    - validate_password
    - wsrep

mysql_daemon:
  args:
    check_osver: True
  default:
    7:
      mysql_daemon: mysql
      version: 5.7.21

pxc_group:
  default:
    pxcluster:
{{ pxc_group }}

pacemaker_group:
  default:
    pxccluster:
      nodes:
{%- for mhost in mon_hostlist %}
        - {{ mhost }}:
{%- endfor %}
      property:
        stonith-enabled: "false"
        no-quorum-policy: "ignore"
      resource:
        - id: db_vip
          type: "IPaddr2"
          group:
            name: pxc
          options:
            ip: {{ db_vip }}
            cidr_netmask: 24
            nic: eth0
          op:
            - action: monitor
              options:
                interval: 5s
        - id: garb_srv
          type: "systemd:garb"
          group:
            name: pxc
          op:
            - action: monitor
              options:
                interval: 5s

lvs_group:
  default:
    pxcluster:
      vip: {{ db_vip }}
      listen_port: 3306
      nodes:
{%- for dhost in data_hostlist %}
        - {{ dhost }}
{%- endfor %}
      protocol: tcp
      checktype: external
      checkcommand: "/usr/bin/check_pxc.py"
      checkport: 9200
      scheduler: wrr
